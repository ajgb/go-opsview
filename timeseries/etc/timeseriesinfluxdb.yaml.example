---
timeseriesinfluxdb:
    server:
        updates:
            host: 0.0.0.0
            logging:
                loggers:
                    opsview:
                        level: INFO
        queries:
            host: 0.0.0.0
            default_parameters:
                data_points: 500
                fill_option: "null"
                min_time_slot: 300
            downsampling:
                - name: autogen
                  duration: 14d
                - name: two_months
                  duration: 62d
                  grouping_interval: 1h
                  fill_option: "previous"
                - name: two_years
                  duration: 732d
                  grouping_interval: 1d
                  fill_option: "previous"
            logging:
                loggers:
                    opsview:
                        level: INFO
    data_dir: ./var
    influxdb:
        server: http://127.0.0.1:8086
        retention_policy: autogen
